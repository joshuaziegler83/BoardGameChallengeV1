            <li class="list-group-item">Dapibus ac facilisis in</li>
            <li class="list-group-item">Morbi leo risus</li>
        </ul>*@

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.BoardGameId)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)

                @foreach (var play in item.Plays)
                {
                    <a href=@Url.Action("Details", "Controller", new { id = play.PlayId}, null)><img src="yourimg.jpg" /></a>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimesPlayed)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BoardGameId }) |
                @Html.ActionLink("Details", "Details", new { id = item.BoardGameId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BoardGameId })
            </td>
        </tr>
    }

</table>
